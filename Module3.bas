Public Sub MA_Separate_File(Country As String, CountryCode As String, ContactName As String, EmailAddress As String)    '   You need to have the WorldWide Deal Tracker already open, edit the file name below VVVVV    Set WWfile = Workbooks("WW_M&A_Deal_Tracker_Jun24.xlsx")    Set WWsheet = WWfile.Sheets("M&As")    WWsheet.Range("B1").AutoFilter Field:=2, Criteria1:=Country        DefaultName = "_M&A_Deal_Tracker_Jun24.xlsx"'   Create a new workbook and copy the filtered data after 2017    Set newWb = Workbooks.Add    Set newWs = newWb.Sheets(1)    newWs.Name = WWsheet.Name    WWsheet.UsedRange.SpecialCells(xlCellTypeVisible).Copy newWs.Range("A1")    '   Copy row height and column width, and set the data rows to height 16    newWs.Rows(1).RowHeight = WWsheet.Rows(1).RowHeight    newWs.UsedRange.Rows(2 & ":" & newWs.UsedRange.Rows.Count).RowHeight = 16    For col_index = 1 To 16 'Copy columns width        newWs.Columns(col_index).ColumnWidth = WWsheet.Columns(col_index).ColumnWidth    Next col_index'   Clean up    WWsheet.Columns("Q:Z").Delete ' For some reason the process creates new, empty columns. This simply deletes them.    WWsheet.AutoFilterMode = False    newWs.Range("A1:P1").AutoFilter    newWs.UsedRange.Borders.LineStyle = xlContinuous    newWs.Select    ActiveWindow.DisplayGridlines = False        '   Copy the other sheets    WWfile.Sheets(Array("INDEX", "About PAC")).Copy Before:=newWb.Sheets(1)    Sheets("M&As").Move After:=Worksheets(Worksheets.Count)    Sheets("About PAC").Move After:=Worksheets(Worksheets.Count)        '   Update the information in INDEX    Set Index = newWb.Sheets("INDEX")    Index.Range("C4").Value = Country    Index.Range("C8").Value = ContactName    Index.Hyperlinks.Add Anchor:=Index.Range("C8"), Address:=EmailAddress, TextToDisplay:=ContactName    Index.Range("C8").Font.Size = 12    Index.Range("C8").Font.Name = "Lato"        Index.Activate    '   Save the file'   newWb.SaveAs FileName:=Path & CountryCode & DefaultName, FileFormat:=xlOpenXMLWorkbook, CreateBackup:=False    newWb.SaveAs FileName:=Application.DefaultFilePath & CountryCode & DefaultName    newWb.Close SaveChanges:=FalseEnd Sub